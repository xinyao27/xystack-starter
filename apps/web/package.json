{
  "name": "web",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm with-env next dev",
    "build": "pnpm with-env next build",
    "start": "pnpm with-env next start",
    "lint": "eslint .",
    "deploy": "pnpm with-env cloudflare && wrangler deploy",
    "preview": "pnpm with-env cloudflare && wrangler dev",
    "cf:login": "wrangler login",
    "cf:typegen": "wrangler types --experimental-include-runtime",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --",
    "db:migrate:local": "wrangler d1 migrations apply xystack --local",
    "db:migrate:prod": "wrangler d1 migrations apply xystack --remote"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@t3-oss/env-nextjs": "catalog:",
