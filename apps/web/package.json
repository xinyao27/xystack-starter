    "@xystack/db": "workspace:*",
    "@xystack/ui": "workspace:*",
    "@xystack/validators": "workspace:*",
    "hono": "catalog:",
    "isbot": "^4.4.0",
    "lucia": "catalog:",
    "lucide-react": "catalog:",
    "next": "14.2.11",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "react-hook-form": "^7.53.1",
    "react-use": "^17.5.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
