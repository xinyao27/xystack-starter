    "@xystack/tailwind-config": "workspace:*",
    "@xystack/tsconfig": "workspace:*",
    "autoprefixer": "^10.4.20",
    "eslint": "catalog:",
    "jiti": "^2.4.0",
    "postcss": "catalog:",
    "prettier": "catalog:",
    "tailwindcss": "catalog:",
