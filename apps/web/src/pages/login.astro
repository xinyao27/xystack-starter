---
import Layout from '~/layouts/Layout.astro'
import { UserAuthForm } from '~/features/authentication/user-auth-form'
---

<Layout title="Login" hideHeader>
  <div class="h-screen container relative flex justify-center items-center">
    <div>
      <div class="flex flex-col space-y-2 text-center">
        <h1 class="text-2xl font-semibold tracking-tight mb-8">Log in</h1>
      </div>
      <div class="min-w-76 border rounded-xl p-12">
        <div class="mx-auto flex w-full flex-col justify-center space-y-6 sm:w-72">
          <UserAuthForm client:only="react" />
        </div>
      </div>
    </div>
  </div>
</Layout>
