{
  "name": "@xystack/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client.ts",
    "./schema": "./src/schema.ts",
    "./env": "./get-env.ts"
  },
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "lint": "eslint",
    "push": "pnpm with-env drizzle-kit push",
    "studio": "LOCAL_DB_PATH=$(find ../../.wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --",
    "cf-typegen": "wrangler types",
    "db:push": "pnpm with-env drizzle-kit push",
    "db:pull": "pnpm with-env drizzle-kit pull",
    "db:generate": "pnpm with-env drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply xystack --local",
    "db:migrate:prod": "wrangler d1 migrations apply xystack --remote",
    "db:migrate:preview": "wrangler d1 migrations apply --env preview xystack-preview --remote"
  },
  "dependencies": {
    "drizzle-orm": "^0.34.0",
    "drizzle-zod": "^0.5.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@xystack/eslint-config": "workspace:*",
    "@xystack/prettier-config": "workspace:*",
    "@xystack/tsconfig": "workspace:*",
    "better-sqlite3": "^11.3.0",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.25.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@xystack/prettier-config"
}
